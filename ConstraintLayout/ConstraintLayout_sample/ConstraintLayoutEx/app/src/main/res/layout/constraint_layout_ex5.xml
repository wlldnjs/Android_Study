<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/centerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기준 버튼"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="하단여백"
        app:layout_constraintBottom_toTopOf="@+id/centerBtn"
        app:layout_constraintLeft_toLeftOf="@+id/centerBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="상단여백"
        app:layout_constraintRight_toRightOf="@+id/centerBtn"
        app:layout_constraintTop_toBottomOf="@+id/centerBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="좌측여백"
        app:layout_constraintBaseline_toBaselineOf="@+id/centerBtn"
        app:layout_constraintLeft_toRightOf="@+id/centerBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="우측여백"
        app:layout_constraintRight_toLeftOf="@+id/centerBtn"
        app:layout_constraintTop_toTopOf="@+id/centerBtn" />

</android.support.constraint.ConstraintLayout>